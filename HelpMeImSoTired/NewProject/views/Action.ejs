<%- include('partials/HomepageHeader') %> 
<%- include('partials/NavBar') %>

<div class="container">
    <div class="row">
      <% games.forEach(function(game, index) { %>
        <% if (index % 3 === 0 && index !== 0) { %>
          </div><div class="row">
        <% } %>
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
          <img src="<%= game.img_url %>" alt="Game image" class="img-fluid">
        </div>
      <% }); %>
      <% if (games.length % 3 !== 0) { %>
        </div> <!-- Close the row if the number of games is not a multiple of 3 -->
      <% } %>
    </div>
  </div>
  

<%- include('partials/footer') %>


