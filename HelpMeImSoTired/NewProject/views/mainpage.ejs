<%- include('partials/HomepageHeader') %> 
<%- include('partials/NavBar') %>
<% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
  <a href="/backoffice" class="btn btn-primary btn-custom ">Go to backoffice</a>
<% } %>
<% if (customerId) { %>
  <a href="/logout" class="btn  btn-custom logout-btn">Logout</a>
<% } %>

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <%- include('partials/CarouselMain') %>
    </div>

    <div class="col-md-4">
      <!-- Side Images (2 images) -->
      <div class="row">
        <div class="col-md-12">
          <% for(let i = 0; i < 2; i++) { %>
            <div class="content-wrapper">
              <div class="sideimage-box">
                <a href="/product/<%= productIds[i]%>">
                  <img src="<%= imageUrls[i] %>" alt="Image <%= i + 1 %>" />
                </a>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Image Gallery (12 images) -->
  <div>
    <% for(let i = 2; i < 14; i++) { %>
      <% if ((i - 2) % 3 === 0) { %>
        <div class="row">
      <% } %>
      <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12 mb-4">
        <div class="content-wrapper">
          <div class="subimage-box">
            <a href="/product/<%=  productIds[i]%>">
              <img src="<%= imageUrls[i] %>" alt="Image <%= i + 1 %>" class="img-fluid"/>
            </a>
          </div>
        </div>
      </div>
      <% if ((i - 1) % 3 === 0 || i === 13) { %>
        </div>
      <% } %>
    <% } %>
  </div>
</div>
<style>
.btn-custom {
  margin-right: 10px; /* Add some space between buttons */
  border-radius: 5px; /* Rounded corners */
  padding: 10px 20px; /* Padding inside buttons */
  font-size: 16px; /* Font size */
  font-weight: bold; /* Bold font weight */
}

.btn-primary.btn-custom {
  background-color: #007bff; /* Blue color for "Go to backoffice" */
  border-color: #007bff; /* Blue border color */
  color: #fff; /* White text color */
}

.btn-danger.btn-custom {
  background-color: #dc3545; /* Red color for "Logout" */
  border-color: #dc3545; /* Red border color */
  color: #fff; /* White text color */
}

.btn-custom:hover {
  opacity: 0.8; /* Reduce opacity on hover */
}

.logout-btn {
  border-radius: 5px;
  padding: 10px 20px;
  font-size: 16px;
  font-weight: bold;
  background-color: #dc3545; /* Red color for "Logout" */
  border-color: #dc3545; /* Red border color */
  color: #fff; /* White text color */
}

.logout-btn:hover {
  opacity: 0.8;
}

/* Positioning the logout button */
.container {
  position: relative; /* Make the container relative to enable absolute positioning */
}

.logout-btn {
  position: absolute;
  top: 100px; /* Adjust the top position as needed */
  right: 10px; /* Adjust the right position as needed */
}
</style>
<%- include('partials/footer') %>
